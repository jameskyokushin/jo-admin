<div id="link1">
<%= link_to 'listing Job-Orders', job_orders_path %>||
<%= link_to 'Create Job-Order', new_job_order_path %>
</div>
<div id="link">
<%= link_to "Sign out",  destroy_user_session_path,  :method=> :delete %> ||
